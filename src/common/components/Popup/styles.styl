.root
  position absolute
  width 100%
  min-height 100%
  left 0
  top 0
  z-index: 22
  display flex
  justify-content: center
  flex-direction: column
  padding: 0 $indent

  +media-mobile()
    padding: 0 20px
    padding-top 60px

.wrapper
  max-width: 1530px
  margin 0 auto
  position relative
  z-index 2

  +media-mobile()
    padding: 0

.cross
  position absolute
  top 37px
  right 40px
  width 34px
  height 34px
  z-index: 10
  padding: 5px
  transition: opacity 0.2s
  background: 0
  border: 0
  borader-radius: 0

  +hoverSupport()
    opacity 0.8

  +media-mobile()
    top 15px
    right 15px

.grid
  color: $white
  display flex
  align-items: center

  +media-mobile()
    display block

.gridItem
  width: 50%
  padding-right 45px
  flex-shrink: 0
  position relative

  +media-mobile()
    padding-right 0
    width 100%

  &:last-child
    padding-right 0
    padding-left: 45px

    +media-mobile()
      padding-left 0
      margin-bottom 40px

.imgAnim
  overflow hidden

.img
  object-fit cover
  object-position center
  width: 100%
  height: 100%
  position absolute
  left 0
  top 0

  +media-mobile()
    left 15px

.content
  position relative
  left: 0
  top: 0
  width: 100%
  height 100%
  min-height 460px
  padding 38px
  padding-top 30px
  display flex
  flex-direction: column

  +media-mobile()
    padding: 0
    margin-left: -15px

  +media-mobile-xl()
    min-height 300px

  +media-mobile-s()
    min-height 250px

.text
  p
    font-size 15px
    font-weight 600
    color: $white
    margin-bottom 30px
    line-height 1.71

    +media-mobile()
      margin-bottom 20px

.number
  font-size: 100px
  line-height: 80px
  font-weight: 900
  color: $white

  +media-mobile()
    padding-top 9px
    padding-bottom 9px

  @supports(-webkit-text-stroke: 2px black)
    color: transparent
    -webkit-text-stroke: 2px $white

  +media-tablet()
    font-size: 60px
    line-height: 60px

.title
  font-size: 44px
  line-height: 1.27
  font-weight: 900
  color: $white
  margin-top auto

  +media-desktop-xl()
    font-size: 36px
    line-height: 1.2

  +media-tablet()
    font-size: 24px
    line-height: 34px

  +media-mobile-s()
    font-size: 21px
    line-height: 28px

  +media-mobile()
    margin-top auto
    margin-bottom: 20px

.icon
  position absolute
  right 30px
  top 30px

.isFalse
  color: $tango

.isTrue
  color: $emerald

.link
  color: $turquoise
  font-size: 15px
  font-weight: 900
  transition: color 0.2s, border-color 0.2s
  border 1px solid $turquoise
  padding 6px 10px
  border-radius 3px

  +hoverSupport()
    color $white
    border-color $white

.container
  position relative
  overflow hidden

  +media-mobile()
    margin-bottom 40px
    padding-left 15px
    margin-left -15px

.filter
  position: absolute
  width: 100%
  height: 100%
  left: 0
  top: 0

  &:after
    content: ''
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    background: $black
    opacity 0.1

.overlay
  position absolute
  width 100%
  height 100%
  left 0
  right 0
  z-index 1
  background-color transparent
  border 0
  border-radius 0

.subText
  position relative
  font-size: 30px
  margin-bottom 10px
