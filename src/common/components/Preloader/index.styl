@keyframes loading {
  0% {
    height: 100%
  }
  25% {
    height: 75%
  }

  75% {
    height: 25%
  }
  
  100% {
    height: 0
  }
}

.root
  position fixed
  width 100%
  height 100%
  left 0
  top 0
  background: $black
  z-index 23
  display: flex
  align-items: center
  justify-content center

.wrapper
  position relative
  overflow hidden
  width: 200px
  height: 300px
  display inline-block

  +media-mobile()
    width: 150px
    height: 200px

.img
  max-width: 100%
  width 100%
  height auto

.anim
  position absolute
  width 100%
  height: 100%
  left 0
  top 0
  background: $black
  animation: loading 1.5s 1s 1 ease-in-out both