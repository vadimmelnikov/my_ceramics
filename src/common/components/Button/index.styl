.root
  background-color: $white
  padding: 9px 0;
  font-size: 18px
  letter-spacing: 0.01em
  color: $cod-gray
  border: 1px solid transparent
  border-radius: 0
  font-weight: bold
  width: 100%
  transition: box-shadow 0.2s
  text-transform: uppercase;

  +media-vk-table()
    padding: 6px 0;
    font-size: 15px;

  +hoverSupport()
    box-shadow: 0px 4px 96px $white, 0px 4px 34px $white
  
  &:active
    border-color: $white
    background-color: $cod-gray
    color: $white
    box-shadow: 0px 0px 8px rgba(255, 255, 255, 0.88)

  &:focus
    box-shadow: 0px 4px 96px $white, 0px 4px 34px $white
    
  